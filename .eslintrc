{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "plugin:react/recommended",
    "airbnb"
  ],
  "overrides": [],
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "no-unused-vars": 1,
    "arrow-body-style": [
      "error",
      "as-needed"
    ]
  },
  "ignorePatterns": [
    "dist/",
    "webpack/",
    "postcss.config.js"
  ],
  "settings": {
    "import/resolver": {
      "alias": {
        "map": [
          [
            "@",
            "./src/"
          ],
          [
            "assets",
            "./public/"
          ]
        ],
        "extensions": [
          ".ts",
          ".js",
          ".jsx",
          ".json",
          ".scss"
        ]
      }
    }
  }
}
